{
  "name": "d1bundle",
  "version": "1.0.0",
  "description": "d1 bundle",
  "main": "dist/d1bundle.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "copy:css": "copyfiles ./node_modules/d1css/src/*.css ./dist -f",
    "//build-beautify:js": "uglifyjs --verbose --beautify --comments '/^/*!/' --output ./dist/d1.js ./src/d1.js",
    "//build:js": "copyfiles ./node_modules/d1css/src/d1.js ./dist -f",
    "browserify:js": "browserify -o ./dist/d1bundle.js ./src/d1bundle.js",
    "minify:js": "uglifyjs --verbose --comments /^!/ --output ./dist/d1bundle.min.js ./dist/d1bundle.js",
    "build": "npm run copy:css && npm run browserify:js && npm run minify:js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vvvkor/d1"
  },
  "keywords": [
    "css",
    "javascript",
    "lightweight",
    "micro",
    "framework",
    "bundle"
  ],
  "author": "Vadim Korolev <vadimkor@yandex.ru> (https://github.com/vvvkor)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vvvkor/d1bundle/issues"
  },
  "homepage": "https://github.com/vvvkor/d1bundle#readme",
  "dependencies": {},
  "devDependencies": {
    "d1css": "^1.2",
    "d1calendar": "^1.2",
    "d1dialog": "^1.2",
    "d1edit": "^1.2",
    "d1gallery": "^1.2",
    "d1lookup": "^1.2",
    "d1tablex": "^1.2",
    "d1valid": "^1.0",
    "browserify": "^16.0",
    "copyfiles": "^2.1.0",
    "cross-var": "^1.1.0",
    "cssnano": "^3.10.0",
    "perfectionist": "^2.4.0",
    "postcss-calc": "^7.0.1",
    "postcss-cli": "^2.6.0",
    "postcss-custom-properties": "^8.0.9",
    "postcss-discard-comments": "^2.0.4",
    "replace-in-file": "^3.4.2",
    "uglify-js": "^3.3.27"
  }
}
